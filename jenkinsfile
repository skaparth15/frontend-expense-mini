pipeline{
    agent{

        label "agent"
    }

    stages {
        stage ("listing the frontend files")
        {
           steps{
            sh """
                ls -ltr
             """
           } 
        }

         stage ("zipping the files")

        {
           steps{
            sh """
               zip -r frontend.zip . -x jenkinsfile -x .git -x backend.*

             """
           } 
        }

        stage ("uploading the frontend code to nexus server"){
            steps{

                nexusArtifactUploader(
                nexusVersion: 'nexus3',
                protocol: 'http',
                nexusUrl: '3.92.139.59:8081',
                groupId: 'com.expense',
                credentialsId: "nexus-cred",
                version: '1.0'
                repository: 'frontend-expense',
                artifacts: [
                    [artifactId: 'frontend',
                        classifier: '',
                        file: 'frontend.zip',
                        type: 'zip']
                ]
                )
            

            }
        }

    }
}